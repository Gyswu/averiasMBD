{block content}

    <div class = "container">

    <div class = "row">

        <h1 n:block = "title"> Empresas </h1>

    </div>

    <br>

    <div class = "row">

        <div class = "col col-lg-12">

            <a n:href = "Empresas:add" class="btn btn-xs btn-success"> AÃ±adir Empresa </a>

        </div>

    </div>

    <br>

    <div class = "row">

        <div class = "col col-lg-12">

            <table class="table">

                <thead class="thead-dark">

                    <tr>

                        <th>ID</th>

                        <th>Nif</th>

                        <th>Nombre</th>

                        <th>Telefono</th>

                        <th>Direccion</th>

                        <th> </th>

                    </tr>

                </thead>

                <tbody>

                    {foreach $empresas as $empresa}

                        <tr>

                            <td>{$empresa->id}</td>

                            <td>{$empresa->nif}</td>

                            <td>{$empresa->nombre}</td>

                            <td>{$empresa->telefono}</td>

                            <td>{$empresa->direccion}</td>

                            <td>

                                <a n:href="Empresas:edit $empresa->id" class="btn btn-xs btn-primary ">Editar</a>

                                <a n:href="Empresas:borrar $empresa->id" class="btn btn-xs btn-danger ">Borrar</a>

                            </td>

                        </tr>

                    {/foreach}

                </tbody>

            </table>

        </div>


    </div>

</div>


{/block}