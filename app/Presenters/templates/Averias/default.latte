                                <td> {$averia -> cumplimentado} </td>
                                
                                <td> {$averia -> aparato} </td>

                                <td> {$averia -> marca} </td>

                                <td> {$averia -> modelo} </td>

                                <td> {$averia -> numeroSerie} </td>

                                <td> {$averia -> garantia} </td>


                            </tr>
                        {/foreach}

                    </tbody>

                </table>

            </div>

        </div>

